<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="driver.prototype.aptlegion.limocartdriver.Trip">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Distance"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:id="@+id/textView5" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Waiting Time"
        android:id="@+id/textView6"
        android:layout_below="@+id/speed"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="5dp"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Distance"
        android:id="@+id/distance"
        android:textSize="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_alignRight="@+id/button2"
        android:layout_alignEnd="@+id/button2" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Speed"
        android:id="@+id/speed"
        android:textSize="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="195dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:visibility="gone"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="End Trip"
        android:id="@+id/button2"
        android:onClick="endtrip"
        android:layout_below="@+id/distance"
        android:layout_centerHorizontal="true" />
    <com.google.android.gms.maps.MapView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_below="@+id/button2"
        android:id="@+id/nav"
        android:layout_alignParentBottom="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Waiting"
        android:id="@+id/btn_Start"
        android:background="#51f5f0"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/button2"
        android:layout_toStartOf="@+id/button2" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop Waiting"
        android:id="@+id/btn_Stop"
        android:background="#f55151"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/button2"
        android:layout_alignParentRight="true"
        />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time"
        android:textSize="30dp"
        android:layout_marginLeft="220dp"
        android:id="@+id/txtview_time"
        android:layout_alignTop="@+id/distance"
        android:layout_above="@+id/button2"
       />





</RelativeLayout>
